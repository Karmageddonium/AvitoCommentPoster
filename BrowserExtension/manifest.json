{
  "manifest_version": 2,
  "name": "Avito Comment Adder",
  "description": "Adding commenting ability to avito.ru",
  "version": "0.9",
  "developer": {
    "name": "Aleksandr",
    "url": "https://t.me/gkarma"
  },

  "icons": {
    "16": "resources/icon16.png",
    "48": "resources/icon48.png",
    "128": "resources/icon128.png"
  },

  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*",
    "tabs",
    "contextMenus",
    "https://www.example.com/uploads"
  ],

  "background": {
    "scripts": ["content.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "resources/icon128.png",
    "default_popup": "popup.html",
    "icon_128": "resources/icon128.png"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}